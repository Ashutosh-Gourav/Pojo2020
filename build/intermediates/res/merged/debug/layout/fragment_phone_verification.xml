<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#880000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:gravity="center"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/app_icon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="@drawable/boundry_rect_rounded_background"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/trans_rect_back"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@android:color/holo_blue_dark"
                android:text="Phone Number:"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_weight="5"/>
            <EditText
                android:id="@+id/forgot_pwd__phoneNumber_et"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:hint="10 digits only"
                android:textSize="16sp"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="10"
                android:background="#eeffffff"
                android:textColor="#212121"
                android:layout_weight="5"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/trans_rect_back"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@android:color/holo_blue_dark"
                android:text="Email Id:"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_weight="5"/>
            <EditText
                android:id="@+id/forgot_pwd__email_et"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:hint="Registered email"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:background="#eeffffff"
                android:textColor="#212121"
                android:layout_weight="5"/>

        </LinearLayout>


        <Button
            android:id="@+id/submit_number_button"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_back"
            android:textColor="#ffffff"
            android:text="Submit"/>

    </LinearLayout>
</LinearLayout>

