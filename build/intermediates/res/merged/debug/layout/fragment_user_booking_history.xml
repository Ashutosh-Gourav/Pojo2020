<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#880000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/boundry_rect_rounded_background"
        android:layout_margin="10dp">
    <ListView
        android:id="@+id/userBookingsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:transcriptMode="alwaysScroll"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/zero_bookings_ll"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#880000"
        android:padding="10dp">

        <TextView
            android:id="@+id/zero_state_message_tv"
            android:drawableTop="@drawable/app_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:alpha=".3"
            android:gravity="center"/>

    </LinearLayout>
    </RelativeLayout>