<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_no_bound">
    <LinearLayout
        android:id="@+id/his_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:id="@+id/his_pooja_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:inputType="text"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Status:"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/his_pooja_booking_status_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Booked On:"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <TextView
                android:id="@+id/his_pooja_booking_date_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_weight="2"
                android:paddingLeft="5dp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Starts On:"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>
                <TextView
                    android:id="@+id/his_pooja_start_date_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:layout_weight="2"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

        </LinearLayout>
        <!--<ImageView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="2"-->
            <!--android:src="@drawable/more_details_icon"-->
            <!--android:layout_gravity="center"-->
            <!--android:padding="5dp"-->
            <!--android:background="@drawable/trans_circle"/>-->
        <TextView
            android:id="@+id/more_details_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="more"
            android:drawableTop="@drawable/more_details_icon"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_weight="2"
            android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>