<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#880000"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/boundry_rect_rounded_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_pooja_name_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Pooja Name"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Booking time:"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Pooja start time:"
                android:textColor="#ffffff" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/history_pooja_booking_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/trans_rect_back" />

            <TextView
                android:id="@+id/history_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/trans_rect_back"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Dakshina Offered :"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/history_dakshina_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Priest preparation charge :"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/history_prep_cost_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="#ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Total cost :"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/history_total_cost_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/details_priest_ll"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/trans_circle"
                android:src="@drawable/person_default" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/details_priest_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/details_phone_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/details_experience_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/holo_orange_dark" />
            </LinearLayout>

        </LinearLayout>
            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cancel Booking"
                android:drawableTop="@drawable/cross"
                android:gravity="center"
                android:textColor="#ffffff"/>
            </LinearLayout>
        <TextView
            android:id="@+id/details_lang_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:textColor="@android:color/holo_orange_dark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Booking progress track"
            android:textColor="#ffffff"
            android:textStyle="bold" />


        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:orientation="horizontal">-->
        <LinearLayout
            android:id="@+id/booking_status_track_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/first_step_tv"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_no_bound"
                    android:gravity="center"
                    android:text="Searching priest"
                    android:textColor="#ffffff" />

                <ImageView
                    android:id="@+id/first_down_arrow_iv"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down_arrow_256" />

                <TextView
                    android:id="@+id/second_step_tv"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_no_bound"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Priest assigned"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cancelled_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:drawableTop="@drawable/cross"
                    android:text="cancelled"
                    android:textColor="#ffffff"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_clickables_background"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/right_arrow_256" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/final_step_tv"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_no_bound"
                    android:gravity="center"
                    android:text="Pooja completed"
                    android:textColor="#ffffff" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/up_arrow_256" />

                <TextView
                    android:id="@+id/third_step_tv"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_no_bound"
                    android:gravity="center"
                    android:text="Pooja started"
                    android:textColor="#ffffff" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>