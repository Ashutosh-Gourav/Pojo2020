<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#cccccc"/>
                    <corners android:radius="10dp"/>
                </shape>
            </item>
            <item
                android:bottom="6px"
                android:left="3px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient

                        android:startColor="#FFCDD2"
                        android:endColor="#800000"
                        android:angle="270" />
                    <corners
                        android:radius="10dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#cccccc"/>
                    <corners android:radius="10dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#FFD700"
                        android:endColor="#FFD700"
                        android:angle="270" />
                    <corners
                        android:radius="10dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!--android:startColor="#ff9917"-->
    <!--android:endColor="#FFD700"-->
    <!--android:centerColor="#ff5722"-->

</selector>